program {
    ConstruirPared()
}
    
procedure PonerHileraDeLadrillosCompleta(){
 
    PonerHileraDe_LadrillosSimples(3)
    VolverCabezalAlInicio()
    PonerCemento()
    PonerMedioLadrilloEnElBordeOeste()
    Mover(Este)
    PonerHileraDe_LadrillosSimples(2)
    PonerMedioLadrilloEnElBordeEste()
    VolverCabezalAlInicio()
}

procedure PonerHileraDe_LadrillosSimples(cantidadDeLadrillos){
 
    repeat(cantidadDeLadrillos){
        PonerCemento()
        PonerLadrillo()
        Mover(Este)
    }
    PonerCemento()
    PonerLadrillo()
}

procedure VolverCabezalAlInicio(){
    repeat(3){
        Mover(Oeste)
    }
}

procedure ConstruirPared(){
    repeat(3){
        PonerHileraDeLadrillosCompleta()
        Mover(Norte)  
    }
    
    PonerHileraDeLadrillosCompleta()
}