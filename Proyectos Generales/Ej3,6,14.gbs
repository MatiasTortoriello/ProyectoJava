program{
	Pintar_Puntos_Al_(5, Azul, Este)
}

procedure Pintar_Puntos_Al_(cantidad, color, direccion) {
	/*
  	Prop: Poner *cantidad* de bolitas de color *color* en direccion al *direccion*
  	Prec: Que existan por lo menos *cantidad* de celdas vacias al *direccion*
  	Param:
    	-*cantidad*: Tipo: Numero
                 	Prop: Indicar la cantidad de celdas en las que se tienen que poner las bolitas
    	-*color*: Tipo: color
              	Prop: Determinar el color de las bolitas a poner
    	-*direccion*: Tipo: Direccion
                  	Prop: Indicar la direccion hacia la cual se deben poner las bolitas
	*/
	repeat(cantidad){
  	Poner_ADistancia3Al_(color, direccion)
	}
}

procedure Poner_ADistancia3Al_(color, direccion){
	Poner(color)
	Mover(direccion)
}

procedure Mover3VecesAl_(direccion){
	repeat(3){
    	Mover(direccion)
	}
}
